<filter name="update_category" module="blog" act="procBlogAdminUpdateCategory">
    <form>
        <node target="category_srl" required="true" />
        <node target="mode" required="true" />
    </form>
    <response callback_func="completeUpdateCategory">
        <tag name="error" />
        <tag name="message" />
        <tag name="module_srl" />
    </response>
</filter>
