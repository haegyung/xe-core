<query id="getMemberGroupUseImageMark" action="select">
    <tables>
        <table name="member_group" alias="a" />
        <table name="member_group_member" alias="b" />
    </tables>
    <columns>
        <column name="a.title" alias="title" />
        <column name="a.image_mark" alias="image_mark" />
        <column name="a.group_srl" alias="group_srl" />
        <column name="b.member_srl" alias="member_srl" />
    </columns>
    <conditions>
		<condition operation="notnull" column="a.image_mark" />
        <condition operation="equal" column="b.site_srl" var="site_srl" default="0" pipe="and" />
        <condition operation="equal" column="a.group_srl" default="b.group_srl" pipe="and" />
        <condition operation="equal" column="b.member_srl" var="member_srl" filter="numbers" notnull="notnull" pipe="and" />
    </conditions>
    <navigation>
        <index var="sort_index" default="a.list_order" order="asc" />
    </navigation>
</query>
