<query id="updateMember" action="update">
    <tables>
        <table name="member" />
    </tables>
    <columns>
        <column name="password" var="password" />
        <column name="user_name" var="user_name" minlength="2" maxlength="40" />
        <column name="nick_name" var="nick_name" minlength="2" maxlength="40" />
        <column name="user_id" var="user_id" />
		<column name="email_address" var="email_address" />
        <column name="find_account_question" var="find_account_question" />
        <column name="find_account_answer" var="find_account_answer" default="" />
        <column name="homepage" var="homepage" default="" />
        <column name="blog" var="blog" default="" />
        <column name="birthday" var="birthday" />
        <column name="allow_mailing" var="allow_mailing" default="Y" />
        <column name="extra_vars" var="extra_vars" />
    </columns>
    <conditions>
        <condition operation="equal" column="member_srl" var="member_srl" notnull="notnull" filter="number" />
    </conditions>
</query>
